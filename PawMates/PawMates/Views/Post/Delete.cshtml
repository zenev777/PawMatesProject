@model PawMates.Core.Models.PostViewModels.PostDeleteViewModel
@{
    ViewBag.Title = "Delete Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body"> 
                <img src=@Model.ImageUrl style="height:180px; object-fit: cover; object-position: 25% 25%;">
                <p class="text-danger mt-3">"Are you sure you want to delete this post?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="All" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>