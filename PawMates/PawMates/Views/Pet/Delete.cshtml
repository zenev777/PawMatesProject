@model PawMates.Core.Models.PetViewModels.PetDeleteViewModel
@{
    ViewBag.Title = "Delete Pet";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Name</h3>
                <p class="mb-0"><strong>Date and Time:</strong> @Model.DateOfBirth</p>
                <p class="text-danger mt-3">"Are you sure you want to delete this pet?"</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                    <input type="hidden" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="All" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>